<div class="container py-4">
   <div class="row justify-content-center">
      <div class="col-lg-8">
         <div class="card shadow-sm form-container">
            <div class="card-header bg-primary text-white p-3">
               <h2 class="mb-0 text-center fw-bold">
                  <i class="fas fa-edit me-2"></i>Edit Book
               </h2>
            </div>
            
            <div class="card-body p-4">
               <form action="/book/edit/{{book._id}}" method="post">
                  <div class="row">
                     <div class="col-md-6">
                        <div class="form-group mb-3">
                           <label for="title" class="form-label">
                              <i class="fas fa-book me-1"></i>Book Title <span class="text-danger">*</span>
                           </label>
                           <input 
                              id="title"
                              class="form-control" 
                              type="text" 
                              name="title"
                              value="{{book.title}}"
                              minlength="3" 
                              maxlength="30"
                              required
                           >
                        </div>
                        
                        <div class="form-group mb-3">
                           <label for="author" class="form-label">
                              <i class="fas fa-user me-1"></i>Book Author <span class="text-danger">*</span>
                           </label>
                           <input 
                              id="author"
                              class="form-control" 
                              type="text" 
                              name="author" 
                              value="{{book.author}}"
                              required
                           >
                        </div>
                        
                        <div class="form-group mb-3">
                           <label for="price" class="form-label">
                              <i class="fas fa-tag me-1"></i>Book Price ($) <span class="text-danger">*</span>
                           </label>
                           <div class="input-group">
                              <span class="input-group-text">$</span>
                              <input 
                                 id="price"
                                 class="form-control" 
                                 type="number" 
                                 name="price" 
                                 value="{{book.price}}"
                                 min="0" 
                                 max="1000"
                                 step="0.01"
                                 required
                              >
                           </div>
                        </div>
                     </div>
                     
                     <div class="col-md-6">
                        <div class="form-group mb-3">
                           <label for="quantity" class="form-label">
                              <i class="fas fa-boxes me-1"></i>Book Quantity <span class="text-danger">*</span>
                           </label>
                           <input 
                              id="quantity"
                              class="form-control" 
                              type="number" 
                              name="quantity" 
                              value="{{book.quantity}}"
                              min="1" 
                              max="500"
                              required
                           >
                        </div>
                        
                        <div class="form-group mb-3">
                           <label for="image" class="form-label">
                              <i class="fas fa-image me-1"></i>Book Cover Image <span class="text-danger">*</span>
                           </label>
                           <div class="mb-2">
                              <img src="{{book.image}}" class="img-thumbnail" style="height: 100px;" alt="Current cover of {{book.title}}">
                           </div>
                           <input 
                              id="image"
                              class="form-control" 
                              type="url" 
                              name="image" 
                              value="{{book.image}}"
                              required
                           >
                        </div>
                        
                        <div class="form-group mb-3">
                           <label for="category" class="form-label">
                              <i class="fas fa-folder me-1"></i>Category
                           </label>
                           <select id="category" class="form-select">
                              <option value="" selected disabled>Select a category</option>
                              <option value="fiction">Fiction</option>
                              <option value="non-fiction">Non-Fiction</option>
                              <option value="science">Science</option>
                              <option value="technology">Technology</option>
                              <option value="business">Business</option>
                              <option value="other">Other</option>
                           </select>
                        </div>
                     </div>
                  </div>
                  
                  <div class="form-group mt-4 d-flex justify-content-between">
                     <a href="/book/list" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                     </a>
                     <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Update Book
                     </button>
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>