<div class="container py-4">
   <div class="row justify-content-center">
      <div class="col-lg-8">
         <div class="card shadow-sm form-container">
            <div class="card-header bg-primary text-white p-3">
               <h2 class="mb-0 text-center fw-bold">
                  <i class="fas fa-plus-circle me-2"></i>Add New Toys
               </h2>
            </div>
            
            <div class="card-body p-4">
               <form action="/toy/add" method="post">
                  <div class="row">
                     <div class="col-md-6">
                        <div class="form-group mb-3">
                           <label for="title" class="form-label">
                              <i class="fas fa-book me-1"></i>Toys Title <span class="text-danger">*</span>
                           </label>
                           <input 
                              id="title"
                              class="form-control" 
                              type="text" 
                              name="title"
                              minlength="3" 
                              maxlength="30"
                              placeholder="Enter Name" 
                              required
                           >
                           <div class="form-text">Title must be between 3-30 characters.</div>
                        </div>
                        
                        <div class="form-group mb-3">
                           <label for="rademark" class="form-label">
                              <i class="fas fa-user me-1"></i>Toys Trademark <span class="text-danger">*</span>
                           </label>
                           <input 
                              id="trademark"
                              class="form-control" 
                              type="text" 
                              name="trademark" 
                              placeholder="Enter Trademark name"
                              required
                           >
                        </div>
                        
                        <div class="form-group mb-3">
                           <label for="price" class="form-label">
                              <i class="fas fa-tag me-1"></i> Price ($) <span class="text-danger">*</span>
                           </label>
                           <div class="input-group">
                              <span class="input-group-text">$</span>
                              <input 
                                 id="price"
                                 class="form-control" 
                                 type="number" 
                                 name="price" 
                                 placeholder="Enter price" 
                                 min="0" 
                                 max="1000"
                                 step="0.01"
                                 required
                              >
                           </div>
                           <div class="form-text">Price must be between $0-$1000.</div>
                        </div>
                     </div>
                     
                     <div class="col-md-6">
                        <div class="form-group mb-3">
                           <label for="quantity" class="form-label">
                              <i class="fas fa-boxes me-1"></i> Quantity <span class="text-danger">*</span>
                           </label>
                           <input 
                              id="quantity"
                              class="form-control" 
                              type="number" 
                              name="quantity" 
                              placeholder="Enter quantity" 
                              min="1" 
                              max="500"
                              required
                           >
                           <div class="form-text">Quantity must be between 1-500 units.</div>
                        </div>
                        
                        <div class="form-group mb-3">
                           <label for="image" class="form-label">
                              <i class="fas fa-image me-1"></i>Preview Image <span class="text-danger">*</span>
                           </label>
                           <input 
                              id="image"
                              class="form-control" 
                              type="url" 
                              name="image" 
                              placeholder="Enter image URL"
                              required
                           >
                           <div class="form-text">Enter a valid URL for the book cover image.</div>
                        </div>
                        
                        <div class="form-group mb-3">
                           <label for="category" class="form-label">
                              <i class="fas fa-folder me-1"></i>Category
                           </label>
                           <select id="category" class="form-select">
                              <option value="" selected disabled>Select a category</option>
                              <option value="car">Car</option>
                              <option value="lego">Lego</option>
                              <option value="plane">Plane</option>
                              <option value="card">Card</option>
                              <option value="other">Other</option>
                           </select>
                        </div>
                     </div>
                  </div>
                  
                  <div class="form-group mt-4 d-flex justify-content-between">
                     <a href="/toy/list" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Cancel
                     </a>
                     <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Save
                     </button>
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>