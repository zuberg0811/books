<div class="container">
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="mb-0 fw-bold text-primary">
          <i class="fas fa-book me-2"></i>Book Collection
        </h1>
        <div class="d-flex">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search books..." aria-label="Search books">
            <button class="btn btn-primary" type="button">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
      </div>
      <hr class="my-3">
    </div>
  </div>

  <div class="row">
    {{#each books }}
    <div class="col-md-3 mb-4">
      <div class="book-card card h-100">
        <img class="card-img-top" src="{{ image }}" alt="{{ title }}">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{ title }}</h5>
          <p class="card-text">By {{ author }}</p>
          <p class="card-price">${{ price }}</p>
          <div class="mt-auto">
            <a href="#" class="btn btn-sm btn-primary w-100">
              <i class="fas fa-info-circle me-1"></i>View Details
            </a>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  {{#unless books.length}}
  <div class="row">
    <div class="col-12 text-center py-5">
      <i class="fas fa-book-open fa-4x text-muted mb-3"></i>
      <h3 class="text-muted">No books available</h3>
      <p>There are currently no books in the collection.</p>
      <a href="/book/add" class="btn btn-primary mt-2">
        <i class="fas fa-plus-circle me-1"></i>Add Your First Book
      </a>
    </div>
  </div>
  {{/unless}}
</div>