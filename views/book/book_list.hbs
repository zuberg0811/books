<div class="container book-container">
   <div class="card shadow-sm">
      <div class="card-header bg-primary text-white p-3 d-flex justify-content-between align-items-center">
         <h2 class="mb-0 fw-bold">
            <i class="fas fa-list me-2"></i>Toys Management
         </h2>
         <a href="/toy/add" class="btn btn-light">
            <i class="fas fa-plus-circle me-1"></i>Add New Toy
         </a>
      </div>
      
      <div class="card-body p-0">
         <div class="table-responsive">
            <table class="table table-hover book-table mb-0">
               <thead>
                  <tr>
                     <th><i class="fas fa-book me-1"></i>Title</th>
                     <th><i class="fas fa-user me-1"></i>Author</th>
                     <th><i class="fas fa-tag me-1"></i>Price</th>
                     <th><i class="fas fa-boxes me-1"></i>Quantity</th>
                     <th><i class="fas fa-image me-1"></i>Cover</th>
                     <th><i class="fas fa-cogs me-1"></i>Actions</th>
                  </tr>
               </thead>
               <tbody>
                  {{#each books}}
                  <tr>
                     <td class="fw-medium">{{title}}</td>
                     <td>{{author}}</td>
                     <td class="price">${{price}}</td>
                     <td>
                        <span class="badge bg-danger">
                           {{quantity}}
                        </span>
                     </td>
                     <td>
                        <img src="{{image}}" class="book-image">
                     </td>
                     <td>
                        <div class="btn-group" role="group">
                           <a href="/toy/edit/{{_id}}" class="btn btn-sm btn-warning me-1">
                              <i class="fas fa-edit me-1"></i>Edit
                           </a>
                           <a href="/toy/delete/{{_id}}" class="btn btn-sm btn-danger"
                              onclick="return confirm('Are you sure you want to delete this book?');">
                              <i class="fas fa-trash-alt me-1"></i>Delete
                           </a>
                        </div>
                     </td>
                  </tr>
                  {{/each}}
               </tbody>
            </table>
         </div>
      </div>
      
      {{#unless books.length}}
      <div class="text-center py-5">
         <i class="fas fa-clipboard-list fa-4x text-muted mb-3"></i>
         <h3 class="text-muted">No Toys available</h3>
         <p>There are currently no Toys in the database.</p>
         <a href="/toy/add" class="btn btn-primary mt-2">
            <i class="fas fa-plus-circle me-1"></i>Add Your First Toy
         </a>
      </div>
      {{/unless}}
      
      <div class="card-footer bg-light p-3">
         <div class="d-flex justify-content-between align-items-center">
            <span class="text-muted"><i class="fas fa-info-circle me-1"></i>Showing {{books.length}} Toys</span>
            <div>
               <a href="/toy" class="btn btn-sm btn-outline-primary">
                  <i class="fas fa-home me-1"></i>Back to Home
               </a>
            </div>
         </div>
      </div>
   </div>
</div>

<script>
   // Helper function for quantity comparison
   Handlebars.registerHelper('lt', function(a, b) {
      return a < b;
   });
</script>